<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DotsView">
        <attr name="dot_style" format="enum">
            <enum name="stoke" value="0" />
            <enum name="solid" value="1" />
        </attr>
        <attr name="default_color" format="color" />
        <attr name="hit_color" format="color" />
    </declare-styleable>
    <declare-styleable name="RefreshContainer">
        <attr name="support_loadmore" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomProgressBar">
        <attr name="pbarColor" format="color" />
        <attr name="pbarWidth" format="dimension" />
        <attr name="pbarSpeed" format="integer" />
        <attr name="shape">
            <enum name="circle" value="0"></enum>
            <enum name="line" value="1"></enum>
        </attr>
        <attr name="annulusColor" format="color" />
        <attr name="annulusWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="startDegrees" format="integer" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="percentTextSize" format="dimension" />
        <attr name="percentSpace" format="dimension" />
        <attr name="pshowText" format="boolean" />
        <attr name="isSolid" format="boolean" />
        <attr name="borderRadius" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ImageViewWithBorder">
        <attr name="circle" format="boolean"/>
        <attr name="border" format="boolean"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color" />
    </declare-styleable>
    <declare-styleable name="CirclePercentView">
        <attr name="arc_width" format="dimension" />
        <attr name="percent_text_size" format="dimension" />
        <attr name="arc_color" format="color" />
        <attr name="arc_bg_color" format="color" />
        <attr name="percent_text_color" format="color" />
        <attr name="max_percent" format="integer" />
        <attr name="percent_start_angle" format="integer" />
    </declare-styleable>
    <declare-styleable name="CommonToolbar">
        <attr name="titleCenter" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animAlphaStart" format="float"/>
        <attr name="expandIndicator" format="reference"/>
        <attr name="collapseIndicator" format="reference"/>
        <attr name="expandToggleType" format="enum">
            <enum name="ImageButton" value="0"/>
            <enum name="TextView" value="1"/>
        </attr>
        <attr name="expandableTextId" format="reference"/>
        <attr name="expandCollapseToggleId" format="reference"/>
        <attr name="expandToggleOnTextClick" format="boolean"/>
    </declare-styleable>
</resources>